=provide(:title, 'Sign in')
%h1
  Sign in
%div.row
  %div.span6.offset3
    =form_for(:session, :url => sessions_path) do |f|
      =f.label :email
      =f.text_field :email

      =f.label :password
      =f.password_field :password

      %br
      =f.submit "Sign in", :class => 'btn btn-primary btn-large'
    %p
      New User?
      =link_to "Sign up now!", signup_path
